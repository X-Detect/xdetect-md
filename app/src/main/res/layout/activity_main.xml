<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/img_element1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/img_splash_element1"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="293dp"
        android:layout_height="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="196dp"
        android:src="@drawable/img_splash_logo"
        android:layout_centerInParent="true" />

    <ImageView
        android:id="@+id/img_element2"
        android:layout_width="256dp"
        android:layout_height="256dp"
        android:src="@drawable/img_splash_element2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:translationX="-96dp"
        android:translationY="96dp"
        />

    <ImageView
        android:id="@+id/img_element3"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/img_splash_element2"
        android:layout_marginBottom="96dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleX="-1"
        android:translationX="100dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>


